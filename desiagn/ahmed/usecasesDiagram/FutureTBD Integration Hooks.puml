actor "Mobile App" as mobile_app
actor "External Tool" as external_tool
actor "Payment Gateway" as payment_gateway
actor "System" as system
actor "Administrator" as admin

rectangle "Future Integration Hooks" {
  usecase "Check API Version" as UC1801
  usecase "Compare Versions" as compare_versions
  usecase "Process LTI Launch" as UC1802
  usecase "Authenticate User" as authenticate_user
  usecase "Initialize Payment" as UC1803
  usecase "Create Transaction" as create_transaction
  usecase "Send Webhook Event" as UC1804
