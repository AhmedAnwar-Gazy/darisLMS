@startuml
hide circle

' Color Customization
skinparam {
    BackgroundColor white
    ArrowColor #4C5FD5
    
    ' Class Diagram specific
    ClassBackgroundColor white
    ClassBorderColor #4C5FD5
    ClassHeaderBackgroundColor #5AC8FA
    ClassAttributeFontColor black
    ClassStereotypeFontColor black
    
    ' Notes
    NoteBackgroundColor #FBBF24
    NoteBorderColor #FBBF24
}

skinparam classAttributeIconSize 0

class "wiki" {
  +id : Integer
  +course : Integer
  +name : String
  +intro : Integer
  +introformat : Integer
  +timecreated : Integer
  +timemodified : Integer
  +firstpagetitle : String
  +wikimode : String
  +defaultformat : String
  +forceformat : Integer
  +editbegin : Integer
  +editend : Integer
  __
  +create()
  +update()
  +delete()
}

class "wiki_links" {
  +id : Integer
  +subwikiid : Integer
  +frompageid : Integer
  +topageid : Integer
  +tomissingpage : String
  __
  +create()
  +update()
  +delete()
}

class "wiki_locks" {
  +id : Integer
  +pageid : Integer
  +sectionname : String
  +userid : Integer
  +lockedat : Integer
  __
  +create()
  +update()
  +delete()
}

class "wiki_pages" {
  +id : Integer
  +subwikiid : Integer
  +title : String
  +cachedcontent : String
  +timecreated : Integer
  +timemodified : Integer
  +timerendered : Integer
  +userid : Integer
  +pageviews : Integer
  +readonly : Integer
  __
  +create()
  +update()
  +delete()
}

class "wiki_subwikis" {
  +id : Integer
