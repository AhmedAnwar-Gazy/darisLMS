}

class "wiki_synonyms" {
  +id : Integer
  +subwikiid : Integer
  +pageid : Integer
  +pagesynonym : String
  __
  +create()
  +update()
  +delete()
}

class "wiki_versions" {
  +id : Integer
  +pageid : Integer
  +content : String
  +contentformat : String
  +version : Integer
  +timecreated : Integer
  +userid : Integer
  __
  +create()
  +update()
  +delete()
}

"wiki_links" "*" --> "1" "wiki_pages" : frompageid
"wiki_links" "*" --> "1" "wiki_subwikis" : subwikiid
"wiki_pages" "*" --> "1" "wiki_subwikis" : subwikiid
"wiki_subwikis" "*" --> "1" "wiki" : wikiid
"wiki_versions" "*" --> "1" "wiki_pages" : pageid
@enduml
